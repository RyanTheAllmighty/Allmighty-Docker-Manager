                                    },
                                    "host": {
                                        "type": "integer",
                                        "minimum": 1,
                                        "maximum": 65535
                                    },
                                    "tcp": {
                                        "type": "boolean"
                                    },
                                    "udp": {
                                        "type": "boolean"
                                    }
                                },
                                "required": [
                                    "container"
                                ]
                            }
                        },
                        "volumes": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "host": {
                                        "type": "string"
                                    },
                                    "container": {
                                        "type": "string"
                                    },
                                    "readOnly": {
                                        "type": "boolean"
                                    },
                                    "directory": {
                                        "type": "boolean"
                                    }
                                },
                                "required": [
                                    "host",
                                    "container"
                                ]
                            }
                        },
                        "volumesFrom": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "container": {
                                        "type": "string"
                                    },
