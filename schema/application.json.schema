{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "/ADM/Application/Root",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "directories": {
            "type": "object",
            "patternProperties": {
                "^(.*?)$": {
                    "id": "/ADM/Shared/Directory",
                    "type": "object",
                    "properties": {
                        "path": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "path",
                        "description"
                    ]
                }
            }
        },
        "variables": {
            "type": "object",
            "patternProperties": {
                "^(.*?)$": {
                    "type": "string"
                }
            }
        },
        "data": {
            "type": "object",
            "patternProperties": {
                "^(.*?)$": {
                    "type": "object",
                    "properties": {
                        "autoMount": {
                            "type": "boolean"
                        },
                        "image": {
                            "type": "string"
                        },
                        "command": {
                            "type": "array"
                        },
                        "workingDirectory": {
                            "type": "string"
                        },
                        "memLimit": {
                            "type": "string"
                        },
                        "environment": {
                            "type": "array",
                            "items": [
                                {
                                    "type": "object",
                                    "properties": {
                                        "name": {
                                            "type": "string"
                                        },
                                        "value": {
                                            "type": ["string", "array"]
                                        }
                                    }
                                }
                            ]
                        },
                        "links": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "container": {
                                        "type": "string"
                                    },
                                    "host": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "container"
                                ]
                            }
                        },
                        "ports": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "container": {
                                        "type": "integer",
                                        "minimum": 1,
                                        "maximum": 65535
                                    },
                                    "host": {
                                        "type": "integer",
                                        "minimum": 1,
                                        "maximum": 65535
                                    },
                                    "tcp": {
                                        "type": "boolean"
                                    },
                                    "udp": {
                                        "type": "boolean"
                                    }
                                },
                                "required": [
                                    "container"
                                ]
                            }
                        },
                        "volumes": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "host": {
                                        "type": "string"
                                    },
                                    "container": {
                                        "type": "string"
                                    },
                                    "readOnly": {
                                        "type": "boolean"
                                    },
                                    "directory": {
                                        "type": "boolean"
                                    }
                                },
                                "required": [
                                    "host",
                                    "container"
                                ]
                            }
                        },
                        "volumesFrom": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "container": {
                                        "type": "string"
                                    },
                                    "required": [
                                        "container"
                                    ]
                                }
                            }
