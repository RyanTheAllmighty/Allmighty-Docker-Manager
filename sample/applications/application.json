{
    "name": "application",
    "description": "This is a sample application which shows some basic setup.",
    "directories": {
        "test": {
            "path": "/example/test",
            "description": "Some test data. The shared boolean shows if ONLY this application uses that directory or if other applications also use it.",
            "shared": false
        },
        "read_only": {
            "path": "/example/readOnly",
            "description": "Some more test data. This one is shared by other containers. Also note this is not an absolute path, it's appended to the directories.storage value in the settings.json.",
            "shared": true
        }
    },
    "layers": {
        "data": {
            "image": "ubuntu:14.04",
            "dataOnly": true,
            "volumes": [
                {
                    "host": "${test}",
                    "container": "/mounted/test",
                    "readOnly": false
                },
                {
                    "host": "${read_only}",
                    "container": "/mounted/RO",
                    "readOnly": true
                },
                {
                    "host": "${read_only}/file.txt",
                    "container": "/mounted/RO/file.txt",
                    "readOnly": true,
                    "directory": false
                }
            ]
        },
        "composer": {
            "image": "composer/composer",
            "runOnly": true,
            "command": "composer --ansi",
            "workingDirectory": "/mounted/test",
            "volumesFrom": [
                {
                    "container": "data"
                }
            ]
        },
        "test": {
            "image": "ubuntu:14.04",
            "dataOnly": false,
            "restart": true,
            "cpuShares": 512,
            "command": "sleep 365d",
            "labels": [
                {
                    "name": "test",
                    "value": "test"
                }
            ],
            "ports": [
                {
                    "host": 7777,
                    "container": 6984
                }
            ],
            "volumesFrom": [
                {
                    "container": "data"
                }
            ]
        },
        "component": {
            "image": "component",
            "dataOnly": false,
            "restart": true,
            "cpuShares": 512,
            "ports": [
                {
                    "host": 7777,
                    "container": 6984
                }
            ],
            "volumesFrom": [
                {
                    "container": "data"
                }
            ]
        }
    }
}